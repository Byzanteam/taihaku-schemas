{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "table-schema.json",
  "title": "table schema",
  "type": "object",
  "required": ["columns"],
  "properties": {
    "columns": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "$ref": "#/definitions/columnDef"
        }
      }
    },
    "uiSchema": {
      "type": "object",
      "$ref": "#/definitions/tableOptions",
      "patternProperties": {
        "^(?!ui:).*": {
          "$ref": "#/definitions/columnUIOptions"
        }
      }
    }
  },
  "definitions": {
    "columnDef": {
      "type": "object",
      "required": ["label", "name", "fieldType"],
      "properties": {
        "label": { "type": "string" },
        "name": { "type": "string" }
      },
      "oneOf": [
        {
          "$ref": "#/definitions/simpleColumnDef"
        },
        {
          "$ref": "#/definitions/associationColumnDef"
        },
        {
          "$ref": "#/definitions/enumColumnDef"
        },
        {
          "$ref": "#/definitions/fileColumnDef"
        },
        {
          "$ref": "#/definitions/signatureColumnDef"
        }
      ]
    },
    "simpleColumnDef": {
      "properties": {
        "fieldType": {
          "type": "string",
          "enum": [
            "BooleanField",
            "DateField",
            "DateTimeField",
            "NumericField",
            "SingleLineField",
            "TextareaField"
          ]
        }
      }
    },
    "associationColumnDef": {
      "required": ["settings"],
      "properties": {
        "fieldType": {
          "type": "string",
          "enum": ["BelongsToField", "HasManyField", "HasOneField"]
        },
        "settings": {
          "type": "object",
          "required": ["associationResource"],
          "properties": {
            "associationResource": { "type": "string" }
          }
        }
      }
    },
    "enumColumnDef": {
      "required": ["settings"],
      "properties": {
        "fieldType": {
          "type": "string",
          "enum": ["CheckboxField", "RadioButtonField"]
        },
        "settings": {
          "type": "object",
          "required": ["options"],
          "properties": {
            "options": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["label", "value"],
                "properties": {
                  "label": { "type": "string" },
                  "value": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "fileColumnDef": {
      "required": ["settings"],
      "properties": {
        "fieldType": { "const": "FileField" },
        "settings": {
          "type": "object",
          "properties": {
            "maxFileItemSizeLimitInMB": { "type": "number" },
            "maxCount": { "type": "integer" },
            "accept": { "type": "string", "$comment": "mimetype" }
          }
        }
      }
    },
    "signatureColumnDef": {
      "required": ["settings"],
      "properties": {
        "fieldType": { "const": "SignatureField" },
        "settings": {
          "type": "object",
          "properties": {
            "contentMediaType": { "type": "string" }
          }
        }
      }
    },
    "tableOptions": {
      "properties": {
        "ui:column-order": {
          "type": "array",
          "items": {
            "type": "string",
            "$comment": "keyof columns"
          }
        },
        "ui:column-pinning": {
          "type": "object",
          "properties": {
            "left": {
              "type": "array",
              "items": { "type": "string", "$comment": "keyof columns" }
            },
            "right": {
              "type": "array",
              "items": { "type": "string", "$comment": "keyof columns" }
            }
          }
        },
        "ui:column-visibility": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "boolean",
              "$comment": "key should be keyof columns"
            }
          }
        },
        "ui:x-appearance": {
          "type": "string",
          "enum": ["input", "presentation"]
        }
      }
    },
    "columnUIOptions": {
      "type": "object",
      "required": ["ui:widget"],
      "properties": {
        "ui:size": {
          "type": ["number", "string"],
          "$comment": "interpreted as pixel unit values with number type. otherwise, interpreted as css styles."
        },
        "ui:min-size": {
          "type": ["number", "string"],
          "$comment": "same to ui:size"
        },
        "ui:max-size": {
          "type": ["number", "string"],
          "$comment": "same to ui:size"
        },
        "ui:enable-resizing": { "type": "boolean" }
      },
      "oneOf": [
        {
          "$ref": "#/definitions/builtInColumnUIOptions"
        },
        {
          "properties": {
            "ui:widget": {
              "type": "string",
              "not": {
                "enum": [
                  "BelongsToWidget",
                  "BooleanWidget",
                  "CheckboxWidget",
                  "DateWidget",
                  "DateTimeWidget",
                  "FileWidget",
                  "HasManyWidget",
                  "HasOneWidget",
                  "NumericWidget",
                  "RadioButtonWidget",
                  "SignatureWidget",
                  "SingleLineWidget",
                  "TextareaWidget"
                ]
              }
            }
          }
        }
      ]
    },
    "builtInColumnUIOptions": {
      "properties": {
        "ui:x-appearance": {
          "type": "string",
          "enum": ["input", "presentation"]
        },
        "ui:x-blankslate": {
          "type": "string"
        }
      },
      "oneOf": [
        {
          "$ref": "#/definitions/simpleColumnUIOptions"
        },
        {
          "$ref": "#/definitions/associationColumnUIOptions"
        },
        {
          "$ref": "#/definitions/dateColumnUIOptions"
        },
        {
          "$ref": "#/definitions/enumColumnUIOptions"
        },
        {
          "$ref": "#/definitions/fileColumnUIOptions"
        },
        {
          "$ref": "#/definitions/booleanColumnUIOptions"
        }
      ]
    },
    "simpleColumnUIOptions": {
      "properties": {
        "ui:widget": {
          "type": "string",
          "enum": [
            "NumericWidget",
            "SignatureWidget",
            "SingleLineWidget",
            "TextareaWidget"
          ]
        }
      }
    },
    "associationColumnUIOptions": {
      "required": ["ui:x-display-property"],
      "properties": {
        "ui:widget": {
          "type": "string",
          "enum": ["BelongsToWidget", "HasManyWidget", "HasOneWidget"]
        },
        "ui:x-display-property": {
          "type": "string",
          "$comment": "key of associationResourceRow"
        }
      }
    },
    "dateColumnUIOptions": {
      "properties": {
        "ui:widget": {
          "type": "string",
          "enum": ["DateWidget", "DateTimeWidget"]
        },
        "ui:x-format": { "type": "string" }
      }
    },
    "enumColumnUIOptions": {
      "properties": {
        "ui:widget": {
          "type": "string",
          "enum": ["CheckboxWidget", "RadioButtonWidget"]
        },
        "ui:x-option-fallback-style": {
          "type": "string",
          "$comment": "className"
        },
        "ui:x-options-style": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "string",
              "$comment": "className of current option. The key is the option.value which defined in column"
            }
          }
        }
      }
    },
    "fileColumnUIOptions": {
      "properties": {
        "ui:widget": {
          "const": "FileWidget"
        },
        "ui:x-capture": {
          "type": "string",
          "enum": ["user", "environment"],
          "$comment": "https://developer.mozilla.org/en-US/docs/Web/HTML/Attributes/capture"
        }
      }
    },
    "booleanColumnUIOptions": {
      "properties": {
        "ui:widget": { "const": "BooleanWidget" },
        "ui:x-truthy-label": { "type": "string" },
        "ui:x-falsy-label": { "type": "string" }
      }
    }
  }
}
